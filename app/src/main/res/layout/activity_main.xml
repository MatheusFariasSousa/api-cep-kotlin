<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#223698"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                app:boxStrokeColor="@color/Verde"
                app:hintTextColor="@color/Verde">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0B0B0B"
                    android:backgroundTint="#EFECEC"
                    android:hint="@string/cep"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="@color/Verde"
                    android:textColorHighlight="#090808"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btBuscarCEP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="@string/buscar_cep"
                android:textAllCaps="true"
                android:textColor="#131111"
                android:textColorHint="#090707"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            app:boxStrokeColor="@color/Verde"
            app:hintTextColor="@color/Verde">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLogradouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E3E3"
                android:backgroundTint="@color/white"
                android:drawableTint="#EFEFEF"
                android:foregroundTint="#F1E9E9"
                android:hint="@string/logradouro"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHighlight="#E3DDDD"
                android:textColorHint="#F1EAEA"
                android:textColorLink="#EDE6E6"
                android:textCursorDrawable="@drawable/cursor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:boxStrokeColor="@color/Verde"
            app:hintTextColor="@color/Verde">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAE2E2"
                android:backgroundTint="#E3E2E2"
                android:hint="@string/bairro"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/Verde"
                android:textCursorDrawable="@drawable/cursor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:boxStrokeColor="@color/Verde"
            app:hintTextColor="@color/Verde">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E0E0"
                android:hint="@string/cidade"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/Verde"
                android:textCursorDrawable="@drawable/cursor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:boxStrokeColor="@color/Verde"
            app:hintTextColor="@color/Verde">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#E4D9D9"
                android:hint="@string/estado"
                android:inputType="text"
                android:maxLength="2"
                android:textColor="@color/Verde"
                android:textCursorDrawable="@drawable/cursor" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>
